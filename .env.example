# PostgreSQL (shared by all services)
POSTGRES_USER=realestate
POSTGRES_PASSWORD=change_me_secure_password
POSTGRES_DB=realestate
POSTGRES_PORT=5432

# Database URL â€“ use this when running migrations or apps from your machine (host).
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# From host (e.g. npm run db:migrate): use localhost as HOST.
# Inside Docker (services): compose uses postgres as HOST.
DATABASE_URL=postgresql://realestate:change_me_secure_password@localhost:5432/realestate

# Service ports (host mapping)
LISTINGS_PORT=5001
USERS_PORT=5002
TENANTS_PORT=5003

# App
NODE_ENV=development
SERVER_URL=http://localhost:5001

# Auth (users-service) - OAuth2/JWT
JWT_SECRET=your_jwt_secret_min_32_chars
REFRESH_JWT_SECRET=your_refresh_jwt_secret_min_32_chars

# Optional: API key for simple auth (e.g. gateway)
BG_API_Key=

# Geocoding (listings-service)
GEOCODER_API_KEY=

# Email (tenants-service)
SENDGRID_API_KEY=
